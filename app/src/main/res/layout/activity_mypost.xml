<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.MypostActivity">

    <include
        android:id="@+id/app_bar_mypost"
       layout="@layout/app_bar_mypost" />

    <ImageView
        android:id="@+id/img_post"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_buy"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_post_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Barang yang ditemukan"
            android:textStyle="bold"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/tv_post_deskrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi barang yang ditemukan"
            android:maxLines="20"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:minLines="6"
            android:scrollbars="vertical"/>

        <Button
            android:id="@+id/btn_kmbli"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_button"
            android:textColor="@color/colorWhite"
            android:text="SUDAH DIKEMBALIKAN"/>

    </LinearLayout>



</LinearLayout>